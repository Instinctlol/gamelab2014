material ShadowInteractionTest/ShadowVolumeMaterial
{
	technique
	{
		pass
		{
			//depth_write on
			//lighting off
			
			cull_hardware none // anticlockwise
			cull_software none
			
			scene_blend alpha_blend
			depth_write off
